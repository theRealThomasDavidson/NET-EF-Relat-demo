@model Author

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Author</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Style"></label>
            <input asp-for="Style" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Create </button>
        <a asp-controller="Author" asp-action="Index" class="btn btn-secondary">
            Back to list
        </a>
    </div>
</form>